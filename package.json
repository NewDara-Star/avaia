{
  "name": "@newdara/avaia",
  "version": "1.7.0",
  "description": "Proactive AI Programming Teacher - MCP server for Claude Code",
  "type": "module",
  "main": "dist/server/index.js",
  "bin": {
    "avaia": "dist/server/index.js",
    "avaia-teach": "dist/client/index.js"
  },
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "mkdir -p dist/server/db/migrations && cp src/server/db/migrations/*.sql dist/server/db/migrations/",
    "dev": "tsx watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed-all": "tsx scripts/seed-all-tracks.ts",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src/prompts",
    "src/server/db/migrations"
  ],
  "keywords": [
    "mcp",
    "claude",
    "ai",
    "teaching",
    "programming",
    "spaced-repetition",
    "fsrs",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewDara-Star/avaia.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^13.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}